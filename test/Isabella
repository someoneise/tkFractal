import json

# Chargement du fichier JSON
with open('fiche.json', 'r', encoding='utf-8') as file:
    data = json.load(file)

# Fonction pour transformer le JSON en texte
def json_to_text(data, indent=0):
    text = ""
    indent_space = "  " * indent
    if isinstance(data, dict):
        for key, value in data.items():
            text += f"{indent_space}{key}: "
            if isinstance(value, (dict, list)):
                text += "\n" + json_to_text(value, indent + 1)
            else:
                text += f"{value}\n"
    elif isinstance(data, list):
        for item in data:
            text += json_to_text(item, indent + 1)
    else:
        text += f"{data}\n"
    return text

# Convertir les donn√©es JSON en texte
text_output = json_to_text(data)

# Afficher le texte
print(text_output)
